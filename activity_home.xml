<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEB4E4E4"
    tools:context=".home">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="428dp"
        android:layout_height="617dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="InvalidId,MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/ds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#98231B"
                android:text="DATA STRUCTURES"
                android:textColor="#F8F6F6"
                android:textSize="30sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="61dp" />

            <Button
                android:id="@+id/co"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#838F09"
                android:text="COMPUTER ORAGANISATION"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="61dp" />

            <Button
                android:id="@+id/it"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#673AB7"
                android:text="INFORMATION TECHNOLOGY"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="61dp" />

            <Button
                android:id="@+id/ca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#009688"
                android:text="CALCULUS AND ALGEBRA"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="61dp" />

            <Button
                android:id="@+id/ec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="ELECTRONICS CIRCUITS"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="61dp" />

            <Button
                android:id="@+id/py"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#230853"
                android:text="PYSHOCOLOGY"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="61dp" />

            <Button
                android:id="@+id/gl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00BCD4"
                android:text="GERMAN LANGUAGE"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="61dp" />

            <Button
                android:id="@+id/fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DCC60B"
                android:text="FRENCH LANGUAGE"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>